@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h2> Delete </h2>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
   

    <input type="hidden" asp-for="Id"/>
    <input asp-for="Name"/>
    <input asp-for="UnitPrice"/>
    <input asp-for="StockQty"/>

    <button type="submit">Delete</button>
</form>