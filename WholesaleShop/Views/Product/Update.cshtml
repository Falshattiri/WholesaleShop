@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Update </h2>

<form asp-action="Update" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
   

    <input type="hidden" asp-for="Id"/>
    <input asp-for="Name"/>
    <input asp-for="UnitPrice"/>
    <input asp-for="StockQty"/>

    <button type="submit">Save</button>
</form>